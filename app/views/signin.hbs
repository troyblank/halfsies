<div class="page-wrap">
    <header>
        <div class="icon-logo"></div>
    </header>
    {{#each messages}}
        <div>{{this}}</div>
    {{/each}}
    <form action="/signin" method="post">
        <div>
            <label>Username:</label>
            <input type="text" name="username" />
        </div>
        <div>
            <label>Password:</label>
            <input type="password" name="password" />
        </div>
        <div>
            <input type="submit" value="Sign In" />
        </div>
    </form>
</div>